<div class="flex flex-col w-full bg-slate-500 rounded-lg m-2 p-2">
    <h1 class="text-gray-800 text-lg font-bold">{{title}}</h1>
    <div class="flex justify-between items-center">
        <h3 class="text-sm text-slate-200">- {{User.username}}</h3>
        <h3 class="text-sm">{{createdAt}}</h3>
    </div>
    
    <p class="text-white bg-slate-400 rounded p-2 mt-2">&nbsp&nbsp&nbsp&nbsp&nbsp{{body}}</p>
    <div class="mt-1">
    {{>comments-section this}} 
    </div>
    
    <div class="mt-1">
    {{>reply-section this}}
    </div>
   
</div>